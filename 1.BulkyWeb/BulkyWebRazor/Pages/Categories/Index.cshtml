@page
@model BulkyWebRazor.Pages.Categories.Index



<!DOCTYPE html>
<html>
<head>
    <title>Categories</title>
</head>
<body>
<div>
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>
            Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/Create" class="btn btn-primary">
                Add new category
            </a>
        </div>

    </div>
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <td>
                Id
            </td>
            <td>
                Name
            </td>
            <td>
                Order
            </td>
        </tr>
        </thead>
        <tbody>
        @foreach (var category in Model.Categories)
        {
                <tr>
                    <td>
                        @category.Id
                    </td>
                    <td>
                        @category.Name
                    </td>
                    <td>@category.DisplayOrder</td>
                <td class="">
                    
                        <div class="btn-group" role="group">
                             <a asp-page="/Categories/Edit"  asp-route-id="@category.Id" type="button" class="btn btn-secondary">Edit</a>
                             <a asp-page="/Categories/Delete" asp-route-id="@category.Id" type="button" class="btn btn-danger">Delete</a>
                       </div>    
                </td>
                </tr>
            
        }
        </tbody>
    </table>

</div>
</body>
</html>